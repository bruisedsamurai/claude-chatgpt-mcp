{
  "name": "claude-chatgpt-mcp",
  "version": "1.0.1",
  "main": "dist/index.js",
  "type": "module",
  "description": "A Claude MCP tool to interact with the ChatGPT desktop app on macOS",
  "author": "Syed Azhar",
  "license": "MIT",
  "bin": {
    "claude-chatgpt-mcp": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/syedazharmbnr1/claude-chatgpt-mcp.git"
  },
  "keywords": [
    "mcp",
    "claude",
    "chatgpt",
    "mac"
  ],
  "scripts": {
    // Local hacking: run TS directly with hot reload
    "dev":     "bun run index.ts", 
    // Bundle into a single JS file for production
    "build":   "bun build index.ts --outdir dist --compile",   
    // Ensure dist is up-to-date whenever you install or clone from Git
    "prepare": "bun build index.ts --outdir dist --compile",   
    // Launch the bundled file with Bun (still TS‐aware)
    "start":   "bun run dist/index.js"   
  },
  "dependencies": {
    "@jxa/global-type": "^1.3.6",
    "@jxa/run": "^1.3.6",
    "@modelcontextprotocol/sdk": "^1.5.0",
    "run-applescript": "^7.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.13.4",
    "typescript": "^5.4.2"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  }
}
